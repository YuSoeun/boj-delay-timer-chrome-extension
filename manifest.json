{
    "manifest_version": 3,
    "name": "Tiny Delay Timer",
    "version": "1.0",
    "description": "A tiny timer for tracking delays",
    "permissions": [
        "storage"
    ],
    "content_scripts": [
        {
            "matches": ["https://www.acmicpc.net/*"],
            "css": ["content-styles.css"],
            "js": ["content-script.js"]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}